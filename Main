#include <iostream>
using namespace std;

int Num1;
int Num2;
int Num3;
int Num4;
int selection;
int calculation;
char cont = 'y';

void equation();
void calculate();

int main() {

	while(cont == 'y'){
	equation();
	calculate();
	cout << "Do you have another calculation? Y/N: \n";
	cin >> cont;
	}
	return 0;
}

void equation() {
	cout << "\n\nEnter the first value: ";
	cin >> Num1;
	cout << "\n1 - Sum (+) \n";
	cout << "2 - Subract (-) \n";
	cout << "3 - Multiply(*)\n";
	cout << "4 - Divide(/)\n";
	cout << "Choose an operation: ";
	cin >> selection;
	cout << "\n";
	cout << "Enter the second value: ";
	cin >> Num2;
}

void calculate() {
	// Was anyone able to do the "BREAK" functions?
	if (selection == 1) {
		calculation = Num1 + Num2;
		cout << "\n" << Num1 << " + " << Num2 << " =  " << calculation << "\n\n\n";
	}

	else if (selection == 2) {
		calculation = Num1 - Num2;
		cout << "\n" << Num1 << " + " << Num2 << " =  " << calculation << "\n\n\n";
	}

	else if (selection == 3) {
		calculation = Num1 * Num2;
		cout << "\n" << Num1 << " + " << Num2 << " =  " << calculation << "\n\n\n";
	}

	else if (selection == 4) {
		calculation = Num1 / Num2;
		cout << "\n" << Num1 << " + " << Num2 << " =  " << calculation << "\n\n\n";
	}
	else {
		cout << "Invalid input Try again\n\n";
		cont == 'y';
	}
}